---
import ThemeToggle from "./ThemeToggle.astro";

export interface Props {
  activeNav: string;
}

const { activeNav } = Astro.props;
---

<header class="m-auto mx-4 flex justify-between py-10">
  <div>
    <h2 class="text-2xl font-bold">
      kpthe<span class="text-bleu">.</span>dev
    </h2>
    <nav class="underline-offset-3 space-x-1 pt-0.5 text-xl">
      <a
        href="/"
        class={activeNav === "home"
          ? "underline decoration-bleu decoration-2"
          : "hover:underline decoration-bleu decoration-2"}
      >
        Home</a
      >
      <a
        href="/blog"
        class={activeNav === "blog"
          ? "underline decoration-bleu decoration-2"
          : "hover:underline decoration-bleu decoration-2"}
      >
        Blog</a
      >
      <a
        href="/projects"
        class={activeNav === "projects"
          ? "underline decoration-bleu decoration-2"
          : "hover:underline decoration-bleu decoration-2"}
      >
        Projects
      </a>
    </nav>
  </div>
  <ThemeToggle />
</header>
